{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "api/dist",
    "baseUrl": "./api",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "../src/**/*"
  ],
  "exclude": [
    "../src/client"
  ]
}